<h2>Movies</h2>

<ul>
  {{#each movies}}
    <li>
      <a href="/movies/{{this._id}}">{{this.title}}</a>
      <form action="/movies/{{this.id}}/delete" method="POST">
      <button type="submit">Delete</button>
      </form>
      <a href="/movies/{{this.id}}/edit" class="button">Edit</a>
    </li>
  {{/each}}
</ul>

<a href="/movies/new">Create a new movie!</a>
